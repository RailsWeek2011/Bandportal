<h1>Alle Veranstaltungen</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th>Begin</th>
    <th>End</th>
    <th>Veranstalter</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <% sg = get_sup_group(event.host_group_id) %>

  <tr>
    <td><%= event.name %></td>
    <td><%= event.location %></td>
    <td><%= event.begin %></td>
    <td><%= event.end %></td>
    <td><%= sg.name %></td>
    <td><%= link_to 'Details', event %></td>

    <% if user_signed_in? && user_is_host?(current_user.id, sg.id) %>
        <td><%= link_to 'Bearbeiten', edit_event_path(event) %></td>
        <td><%= link_to 'Loeschen', event, confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

